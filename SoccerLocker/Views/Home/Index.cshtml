@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img width="400" height="400" style="margin:auto;"src="https://cdn.shopify.com/s/files/1/0285/1107/6405/collections/page-featured-products-image-main-300x300_1200x1200.png?v=1574970432" alt="Featured Products" />
        </div>
        
        <div class="item">
            <img width="400" height="400" style="margin:auto;" src="https://www.authenticsoccer.com/images-cache/6D/58/F3DD/6D58F3DDFEA3F7985A992759A8634D618EF1E931.jpg" alt="Adidas Cleat" />
            <div class="carousel-caption"><button class="btn btn-default">@Html.ActionLink("Adidas Predator", "Details/2", "Cleats")</button></div>
        </div>

        <div class="item">
            <img width="400" height="400" style="margin:auto;" src="https://prosoccerstore.co/wp-content/uploads/2021/01/Nike-Tiempo-Legend-7-FG-Fire3-300x300.jpg" alt="Nike">
            <div class="carousel-caption"><button class="btn btn-default">@Html.ActionLink("Nike Tiempo", "Details/1", "Cleats")</button>
        </div>
        </div>

        <div class="item">
            <img width="400" height="400" style="margin:auto;" src="https://cdn.shopify.com/s/files/1/0425/7621/products/new-balance-mens-furon-v5-pro-fg-soccer-cleats-msfpfnb5-cleats-new-balance-85-blackneon-emerald-green-713886.jpg?v=1616433847" alt="New Balance Cleat">
            <div class="carousel-caption"><button class="btn btn-default">@Html.ActionLink("New Balance Furon", "Details/3", "Cleats")</button>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div>
    <h3>Shop some of the biggest Brands!</h3>
    <div class="row">
        <div class="col-sm-4">
            <a href="/Cleats?Brand=Nike&SortBy=&Search="><img width="200" height="200" src="https://static.nike.com/a/images/f_jpg,q_auto:eco/61b4738b-e1e1-4786-8f6c-26aa0008e80b/swoosh-logo-black.png" alt="Nike"/></a>
        </div><div class="col-sm-4">
            <a href="/Cleats?Brand=Adidas&SortBy=&Search="><img width="200" height="200" src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/20/Adidas_Logo.svg/2560px-Adidas_Logo.svg.png" alt="Adidas"/></a>
        </div><div class="col-sm-4">
            <a href="/Cleats?Brand=New+Balance&SortBy=&Search="><img width="200" height="200" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT1L4tzYPKuD0h7f3YU0BX54jNCduET_fa5di2Uhc5Gxb6B0JdWT_O3_Ze2dTqSWUSSBbA&usqp=CAU" alt="New Balance"/></a>
        </div>
    </div>
    <a href="/Cleats" style="text-decoration: none; color: white;"><button class="btn btn-success">Shop All Cleats</button></a>
</div>
  